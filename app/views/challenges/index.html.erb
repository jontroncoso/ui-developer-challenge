<div class="row">
  <div class="col s12 m8 offset-m2">
    <h1><img src="/assets/logo.png" alt="SendGrid"></h1>

    <h2>Get Started for Free</h2>

    <%= form_for :user, html: {'ng-submit': 'submitUser($event)'} do |f| %>
      <div class="input-field col s12 m5">
        <%= f.text_field :first_name, class: "validate", 'ng-model': 'user.first_name' %>
        <%= f.label :first_name, "First Name" %>
      </div>
      <div class="input-field col s12 m5 offset-m2">
        <%= f.text_field :last_name, class: "validate", data: {tooltip: 'asdasdasd'}, 'ng-model': 'user.last_name' %>
        <%= f.label :last_name, "Last Name" %>
      </div>
      <div class="input-field col s12 m5">
        <%= f.text_field :username, class: "validate", 'ng-model': 'user.username' %>
        <%= f.label :username, "Username" %>
      </div>
      <div class="input-field col s12 m5 offset-m2">
        <%= f.email_field :email, class: "validate", 'ng-model': 'user.email' %>
        <%= f.label :email, "Email Address" %>
      </div>
      <div class="input-field col s12 m5">
        <%= f.password_field :password, class: "validate", 'ng-model': 'user.password' %>
        <%= f.label :password, "Password" %>
      </div>
      <div class="input-field col s12 m5 offset-m2">
        <%= f.password_field :password_confirmation, class: "validate", 'ng-model': 'user.password_confirmation' %>
        <%= f.label :password_confirmation, "Confirm Password" %>
      </div>
      <div class="col s12">
        <div class="section">
          <%= f.button 'Sign up', class: 'waves-effect waves-light btn-flat btn-large green white-text' %>
          <button class="plan-toggle waves-effect btn-flat btn-large white grey-text">Review Other Plans</button>
        </div>
      </div>
    <% end %>
  </div>
</div>
